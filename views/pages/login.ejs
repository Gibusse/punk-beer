<% include header.ejs %>

    <div class="ui three item menu">
        <a class="item" href="#"><i class="icon key"></i>Sign in / Sign up</a>
        <a class="item"  href="#"><i class="info circle icon"></i>About</a>
    </div>


    <div class="ui grid container">
        <div class="four wide column"></div>
        <div class="eight wide column">
            <div class="ui top attached tabular menu">
                <a class="item active" data-tab="first">Sign in</a>
                <a class="item" data-tab="second">Sign up</a>
            </div>

            <div class="ui bottom attached tab segment active" data-tab="first">
                <form action="/signin" method="POST" class="ui form segment">
                    <div class="two fields">
                        <div class="field">
                            <label for="pseudo">Pseudo</label>
                            <input type="text" id="pseudo" name="pseudo" required>
                        </div>
                        <div class="field">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                    </div>
                    <button type="submit" class="ui primary submit button">Submit</button>
                </form>
            </div>
            <div class="ui bottom attached tab segment" data-tab="second">
                <form action="/signup" method="POST" class="ui form segment">
                    <div class="two fields">
                        <div class="field">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="field">
                            <label for="pseudo">pseudo</label>
                            <input type="text" id="pseudoSignup" name="pseudo" required>
                        </div>
                    </div>
                    <div class="ui-form-segment">
                        <div class="field">
                            <label for="password">Password</label>
                            <input type="password" id="passwordSignup" name="password" required>
                        </div>
                        <div class="field">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                    </div>
                    <br/>
                    <button type="submit" class="ui primary submit button">Submit</button>
                    <button type="reset" class="ui default button">Reset</button>
                </form>
            </div>
        </div>
        <div class="two wide column"></div>
    </div>




