                <div class="three wide column">
                    <div class="ui segment">

                        <table class="ui striped table">
                            <thead>
                            <tr>
                                <th>
                                    <h2 class="ui header">
                                        Favorites <i class="icon red heart"></i>
                                    </h2>
                                </th>
                            </tr>
                            <tr>
                                <th>Punk beer</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if (favorites !== undefined) { %>

                                <% for(var j=0; j < favorites.length; j++) { %>
                                    <tr>
                                        <td>
                                            <h4 class="ui image header">
                                            <span class="content">
                                        NÂ°<%= favorites[j].favorite_id %> | <%= favorites[j].fav_name %>
                                                <div class="sub header">
                                            <%= favorites[j].fav_tagline %>
                                        </div>
                                        </span>
                                            </h4>
                                        </td>

                                    </tr>
                                <% } %>

                            <% } else { %>
                                <tr>
                                    <td>
                                        <h4>No favorites</h4>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>





